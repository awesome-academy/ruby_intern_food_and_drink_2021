<% provide :title, t(".title") %>
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg" style="background-image: url(/assets/img/news-bg-4.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <div class="breadcrumb-text">
          <p><%= t ".sale" %></p>
          <h1><%= t ".title" %></h1>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end breadcrumb section -->

<!-- featured section -->
<div class="feature-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <div class="featured-text">
          <h2 class="pb-3"><%= t ".why" %><span class="orange-text">Fruitkha?</span></h2>
          <div class="row">
            <div class="col-lg-6 col-md-6 mb-4 mb-md-5">
              <div class="list-box d-flex">
                <div class="list-icon">
                  <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="content">
                  <h3><%= t ".home" %></h3>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 mb-5 mb-md-5">
              <div class="list-box d-flex">
                <div class="list-icon">
                  <i class="fas fa-money-bill-alt"></i>
                </div>
                <div class="content">
                  <h3><%= t ".price" %></h3>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 mb-5 mb-md-5">
              <div class="list-box d-flex">
                <div class="list-icon">
                  <i class="fas fa-briefcase"></i>
                </div>
                <div class="content">
                  <h3><%= t ".custom" %></h3>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6">
              <div class="list-box d-flex">
                <div class="list-icon">
                  <i class="fas fa-sync-alt"></i>
                </div>
                <div class="content">
                  <h3><%= t ".quick" %></h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
<!-- end featured section -->
