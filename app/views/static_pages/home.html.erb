      <div class="row">
        <%= render @foods %>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="product-filters">
              <ul>
                  <li class="active">
                    <%= link_to t(".see_more"), shop_path, class:"cart-btn" %>
                  </li>
              </ul>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row justify-content-center alert alert-danger">
        <h4 class="mb-4"><%= t("home_page.our_products_nil") %></h4>
      </div>
    <% end %>
  </div>
</div>
<!-- end product section -->

