<%= stylesheet_link_tag "edit_user", media: "all", "data-turbolinks-track": true %>
<div class="breadcrumb-section breadcrumb-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <div class="breadcrumb-text">
          <h1><%= t "form.change_password" %></h1>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="card bg-light mt-5 mb-5">
  <article class="card-body mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= t "form.new_password" %></span>
        </div>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t("form.new_password") %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><%= t "form.new_password_confirmation" %></span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("form.new_password_confirmation") %>
      </div>
      <div class="form-group">
        <%= f.submit t("form.update").upcase, class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div>
      <p class="text-center"><%= render "devise/shared/links" %></p>
    </div>
  </article>
</div>
