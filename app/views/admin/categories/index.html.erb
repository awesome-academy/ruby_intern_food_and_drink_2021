<% provide :title, t(".title") %>
<div>
  <div class="page-title">
    <div class="title_left">
      <h3>
        <small><%= t ".subject" %></small>
      </h3>
    </div></br>
    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <%= link_to t(".button"), new_admin_category_path,
         {remote: true, "data-toggle":  "modal", "data-target": "#modal-window", class: "btn btn-primary btn-lg"} %>
        <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-md-12 col-sm-12 ">
      <div class="x_panel">
        <div class="x_title">
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <% if @categories.any? %>
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <table class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th><%= t ".name" %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <%= render @categories %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <%= paginate @categories, theme: "twitter-bootstrap-3" %>
          <% else %>
            <div class="index_product_nil">
              <h1><%= t ".notification_nil" %></h1>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
