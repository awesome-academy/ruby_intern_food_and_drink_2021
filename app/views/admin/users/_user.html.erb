<% @users.each_with_index do |user, i| %>
  <tr>
    <td><%= i+1 %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.address %></td>
    <td>
    <% if user.activated? %>
      <%= link_to admin_user_path(user), method: :delete, data: {confirm: t("sure")}  do %>
        <button type="button" class="btn btn-danger btn-sm">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </button>
      <% end %>
    <% else %>
      <%= link_to admin_user_path(user), method: :put, data: {confirm: t("sure")}  do %>
        <button type="button" class="btn btn-primary btn-sm">
          <i class="fa fa-unlock" aria-hidden="true"></i>
        </button>
      <% end %>
    <% end %>
    </td>
  </tr>
<% end %>
