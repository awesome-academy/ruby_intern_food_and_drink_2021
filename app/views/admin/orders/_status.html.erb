<section class="h-100 h-custom">
  <div class="container py-2">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3">
          <div class="card-body p-5">
            <div class="row">
              <div class="col-lg-12">
                <div class="horizontal-timeline">
                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <%= link_to t(".open"), admin_status_path(status: :open), class: "btn btn-primary btn-sm" %>
                    </li>
                    <li class="list-inline-item items-list">
                      <%= link_to t(".confirmed"), admin_status_path(status: :confirmed), class: "btn btn-info btn-sm" %>
                    </li>
                    <li class="list-inline-item items-list">
                      <%= link_to t(".shipping"), admin_status_path(status: :shipping), class: "btn btn-secondary btn-sm" %>
                    </li>
                    <li class="list-inline-item items-list">
                      <%= link_to t(".completed"), admin_status_path(status: :completed), class: "btn btn-success btn-sm" %>
                    </li>
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                      <%= link_to t(".cancelled"), admin_status_path(status: :cancelled), class: "btn btn-danger btn-sm" %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
