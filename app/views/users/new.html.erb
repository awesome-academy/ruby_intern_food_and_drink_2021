<div id="login-box">
  <div class="left">
    <h1 class="title"><%= t "sign_up.sign_up" %></h1>
    <%= render "layouts/form" %>
    <p>
      <%= t "sign_up.dont_account" %>
      <%= link_to t("sign_up.log_in_now"), login_path %>
    </p>
  </div>

  <div class="right">
    <h2 class="loginwith"><%= t "sign_up.sign_in_with_social_network" %></h2>
    <button class="social-signin facebook">
      <i class="fab fa-facebook">
      <%= t "sign_up.log_in_with_facebook" %>
    </button>
    <button class="social-signin google">
      <i class="fab fa-google"></i>
      <%= t "sign_up.log_in_with_google" %>
    </button>
  </div>
</div>
