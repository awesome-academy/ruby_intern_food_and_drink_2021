<div class="col-md-3 left_col">
  <div class="left_col scroll-view">
    <div class="navbar nav_title nav_title_cus">
      <%= link_to t("food_drink"), admin_root_path, class: "site_title"  %>
    </div>
    <div class="clearfix"></div>
    <!-- menu profile quick info -->
    <div class="profile clearfix">
      <div class="profile_pic">
        <%= image_tag("avatar.jpg", class: "img-circle profile_img") %>
      </div>
      <div class="profile_info">
        <span><%= t "welcome" %>,</span>
        <h2><%= get_name_admin %></h2>
      </div>
    </div>
    <!-- /menu profile quick info -->
    <br/>
    <!-- sidebar menu -->
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
      <div class="menu_section">
        <ul class="nav side-menu">
          <li>
            <a>
              <i class="fa fa-users" aria-hidden="true"></i>
              <%= t "account.accounts" %>
              <span class="fa fa-chevron-right"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("account.accounts"), "#" %></li>
              <li><%= link_to t("account.blocked"), "#" %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav side-menu">
          <li>
            <a>
              <i class="fa fa-product-hunt" aria-hidden="true"></i>
              <%= t "product.products" %>
              <span class="fa fa-chevron-right"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("product.categories"), admin_categories_path %></li>
              <li><%= link_to t("product.all_products"), admin_foods_path %></li>
              <li><%= link_to t("product.add_product"), "#" %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav side-menu">
          <li>
            <a>
              <i class="fa fa-list-alt"></i>
              <%= t "manager_orders" %>
              <span class="fa fa-chevron-right" aria-hidden="true"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("all"), admin_orders_path %></li>
              <% Order.statuses.keys.each do |sta|%>
                <li><%= link_to t("status_order.#{sta}"), admin_status_path(status: sta) %></li>
              <% end%>
            </ul>
          </li>
        </ul>
        <ul class="nav side-menu">
          <li>
            <a>
              <i class="fa fa-bar-chart" aria-hidden="true"></i>
              <%= t "manager_analytic" %>
              <span class="fa fa-chevron-right"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("analytic_week"), "#" %></li>
              <li><%= link_to t("analytic_month"), "#" %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav side-menu">
          <li>
            <a>
              <i class="fa  fa-globe" aria-hidden="true"></i>
              <%= t("language") %>
              <span class="fa fa-chevron-right"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("english"), locale: :en %></li>
              <li><%= link_to t("vietnamese"), locale: :vi %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
    <!-- /sidebar menu -->
  </div>
</div>
